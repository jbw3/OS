{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make debug iso",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "QEMU x86",
            "type": "process",
            "command": "qemu-system-i386",
            "args": [
                "-s", "-S",
                "-serial", "/dev/null",
                // "-serial", "stdio",
                "-monitor", "stdio",
                "-serial", "file:kernel-x86.log",
                "-cdrom", "bin/OS-x86.iso"
                // "-kernel", "bin/kernel-x86"  // this doesn't load programs
            ],
            "dependsOn": "Build Debug",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "kind": "file",
                        "regexp": "^(.*)$",
                        "file": 1,
                        "message": 1
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*"
                }
            }
        }
    ]
}
